<h1>Book Store</h1>

<h2>Editor's Pick'</h2>
<% all_books = Book_data.read %>

<% all_books.each do |book| %>

<% review = Review.find_by("title" => book["title"])%>

<% avg = Review.where("title" => book["title"]).average("star_rating")%>

<ul>
	<li>
			<a href="/books/details?id=<%= book.id %>"><%= (book["title" => "Orphan Train"]) %></a>
			<% if review.present? %> 
			, Average star rating: (<% if avg.blank? %> <i>Not yet rated </i><% else %> <%= avg.round(2) %> stars 	<% end %>)
	<% end %>
		</li>
		</ul>	
	<% end %>			


